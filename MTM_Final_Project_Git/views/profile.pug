extends layout.pug
block content
    div(id="centering")
        div(class="userBox gridBox")
            div
                label="Name: "
                span=user.name
            div
                label="Username: "
                span=user.username
            div
                label="Email: "
                span=user.email
            div
                label="Role: "
                span=user.roles
            br
        h3 Best IDE
            form(method='POST' action='/submitForm')
                div.form-group
                    label(for='eclipse') Eclipse:
                    br
                    input(type='radio', name='resp', value='1')#eclipse
                    br
                    label(for='vscode') Visual Studio Code:
                    br
                    input(type='radio', name='resp', value='2')#vscode
                    br
                    label(for='vs') Visual Studios:
                    br
                    input(type='radio', name='resp', value='3')#vs
                    br
                    label(for='Notepad') Notepad / Notepad ++:
                    br
                    input(type='radio', name='resp', value='4')#Notepad
                input(type="submit", value="submit")